{
  "name": "@tmorin/udom",
  "version": "0.3.0",
  "description": "Set of utilities around the DOM.",
  "keywords": [
    "dom",
    "utility",
    "browser"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/tmorin/udom.git"
  },
  "license": "MIT",
  "author": {
    "name": "Thibault Morin",
    "url": "https://tmorin.github.io"
  },
  "bugs": {
    "url": "https://gitlab.com/tmorin/udom/issues"
  },
  "homepage": "https://gitlab.com/tmorin/udom#readme",
  "publishConfig": {
    "access": "public"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "karma start --single-run --no-auto-watch --no-colors --browsers sl_firefox,sl_chrome",
    "test:watch": "karma start --no-single-run --auto-watch --browsers Firefox",
    "build:clean": "rimraf .tmp dist lib *.tgz",
    "build:lib": "tsc",
    "build:umd": "webpack --config webpack.dev.js",
    "build:umd:min": "webpack --config webpack.prd.js",
    "build": "npm run build:clean && npm run build:lib && npm run build:umd && npm run build:umd:min",
    "release": "standard-version -a",
    "push:release": "git push --follow-tags"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.10",
    "chai": "^4.2.0",
    "karma": "^3.1.1",
    "karma-cli": "^1.0.1",
    "karma-firefox-launcher": "^1.1.0",
    "karma-junit-reporter": "^1.2.0",
    "karma-mocha": "^1.3.0",
    "karma-sauce-launcher": "^1.2.0",
    "karma-webpack": "^3.0.5",
    "mocha": "^5.2.0",
    "standard-version": "^4.4.0",
    "ts-loader": "^5.3.0",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.6",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2",
    "webpack-merge": "^4.1.4"
  }
}
